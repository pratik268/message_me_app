
    <div class="column">
      <%= form_with(model: @user, html: {class: "ui form", role: "form"}, local: true) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
          <%= f.password_field :password , placeholder: "Enter password" %>
            <i class="lock icon"></i>
          </div>
        </div>
          <%= f.submit "submit",class: "ui green submit button" %>
      <% end %>
    </div>